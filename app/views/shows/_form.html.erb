<%= simple_form_for @show, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :date, as: :string, input_html: {value: l(@show.date)} %>
  <%= f.input :text %>
  <%= f.input :movie_suggestions_allowed %>
  <%= f.button :submit, submit_text, class: 'btn btn-primary' %>
	<%= link_to 'Abbrechen', admin_path, class: 'btn' %>
<% end %>
