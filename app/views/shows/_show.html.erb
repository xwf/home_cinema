<div class="box">
	<div class="red rounded-corners-top show_date"><%=l show.date, format: :long %></div>
	<div class="show_text"><%= show.text %></div>
	<div class="suggestions">
		<%= render show.movie_suggestions %>
	</div>
	<%= render (admin ? 'shows/admin_actions' : 'shows/user_actions'), show: show %>
</div>