<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Length</th>
    <th>Year</th>
    <th>Comment</th>
    <th>Registration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.description %></td>
    <td><%= movie.length %></td>
    <td><%= movie.year %></td>
    <td><%= movie.comment %></td>
    <td><%= movie.registration_id %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

